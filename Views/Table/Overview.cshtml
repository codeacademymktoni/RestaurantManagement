@model List<RestorantManagement.ViewModels.TableViewModel>

@{
    ViewData["Title"] = "Home Page";
}


    <div class="row">

        @foreach (var table in Model)
        {
            <div class="col-md-4" style="margin-top:2%">
                <div class="card">
                    @* zafatena *@
                    <div class="card-body">

                        @if (table.IsTaken)
                        {
                            <h5 class="card-title text-danger">Table Number:@table.TableName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Served by: Stefan</h6>
                            <a asp-action="Details" asp-route-tableId="@table.Id" class="card-link btn btn-primary">Table details</a>
                        }
                        else
                        {
                            <h5 class="card-title text-success">Table Number:@table.TableName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Free</h6>
                            <a asp-action="TakeTable" asp-route-tableId="@table.Id" class="card-link btn btn-primary">Take table</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
